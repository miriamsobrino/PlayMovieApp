<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlayMovieApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="searchViewStyle">@style/SearchView</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PlayMovieApp" parent="Base.Theme.PlayMovieApp" />

    <style name="TextTitleCategory">
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:fontFamily">@font/releway</item>


    </style>

    <style name="TextBtnFilter">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:fontFamily">@font/releway</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextInformation">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="SearchView" >
        <item name="android:editTextColor">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:tint">@color/secondary</item>
        <item name="android:fontFamily">@font/releway</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:queryBackground">@color/accent</item>

    </style>
</resources>